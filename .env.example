# ===============================================
# COC-SaaS Environment Configuration
# ===============================================
# Copy this file to .env and configure your values

# -----------------------------------------------
# Application Environment
# -----------------------------------------------
NODE_ENV=development

# -----------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------
POSTGRES_DB=coc_saas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# Full Database URL (used by backend)
DATABASE_URL=postgresql://postgres:your-secure-postgres-password-here@localhost:5432/coc_saas

# -----------------------------------------------
# Redis Configuration
# -----------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# -----------------------------------------------
# Backend API Configuration
# -----------------------------------------------
BACKEND_PORT=3001

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-to-random-string
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this
JWT_REFRESH_EXPIRES_IN=30d

# API Rate Limiting
API_RATE_LIMIT_TTL=60
API_RATE_LIMIT_MAX=100

# -----------------------------------------------
# Frontend Configuration
# -----------------------------------------------
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# Public Environment Variables (accessible in browser)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_APP_NAME=COC-SaaS

# -----------------------------------------------
# Clash of Clans API Configuration
# -----------------------------------------------
# Get your API token from: https://developer.clashofclans.com/
COC_API_TOKEN=your-clash-of-clans-api-token-here
COC_API_BASE_URL=https://api.clashofclans.com/v1

# API Polling Configuration (in milliseconds)
COC_POLL_INTERVAL_WAR=300000          # 5 minutes for active wars
COC_POLL_INTERVAL_CLAN=600000         # 10 minutes for clan data
COC_POLL_INTERVAL_PLAYER=3600000      # 1 hour for player profiles
COC_POLL_INTERVAL_RAID=3600000        # 1 hour for raid weekends

# -----------------------------------------------
# File Upload & Storage
# -----------------------------------------------
# For local development, use local storage
# For production, configure S3-compatible storage
STORAGE_TYPE=local                     # Options: local, s3
STORAGE_LOCAL_PATH=./uploads

# AWS S3 Configuration (if STORAGE_TYPE=s3)
AWS_S3_BUCKET=
AWS_S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# -----------------------------------------------
# Email Configuration (for notifications)
# -----------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@cocsaas.com
SMTP_FROM_NAME=COC-SaaS

# -----------------------------------------------
# Application Features
# -----------------------------------------------
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# -----------------------------------------------
# Logging & Monitoring
# -----------------------------------------------
LOG_LEVEL=debug                        # Options: error, warn, info, debug
LOG_FORMAT=json                        # Options: json, simple

# -----------------------------------------------
# Super Admin Configuration
# -----------------------------------------------
# Initial super admin account (created on first run)
SUPER_ADMIN_EMAIL=admin@cocsaas.com
SUPER_ADMIN_PASSWORD=change-this-password-immediately
SUPER_ADMIN_USERNAME=mac_knight141

# -----------------------------------------------
# Development Tools
# -----------------------------------------------
# Enable Swagger API Documentation
ENABLE_SWAGGER=true
SWAGGER_PATH=api

# Enable GraphQL Playground
ENABLE_GRAPHQL_PLAYGROUND=false